<Window x:Class="Hardware_Management_System.MainScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Main Screen" Height="450" Width="800" ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Button Style for hover effects -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6200EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#6200EE"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

            <Style.Triggers>
                <!-- Hover effect: Change background color when hovered -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6A00"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header (TextBlock) -->
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,20,0,0" Text="Welcome to the Hardware Categories!"/>

        <!-- Categories Section -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <mah:Tile Content="Cement" Style="{StaticResource ModernButtonStyle}" Click="CategoryButton_Click"/>
            <mah:Tile Content="Steel Bars" Style="{StaticResource ModernButtonStyle}" Click="CategoryButton_Click"/>
            <mah:Tile Content="Home Appliances" Style="{StaticResource ModernButtonStyle}" Click="CategoryButton_Click"/>
            <mah:Tile Content="Electrical Appliances" Style="{StaticResource ModernButtonStyle}" Click="CategoryButton_Click"/>
            <mah:Tile Content="Paints" Style="{StaticResource ModernButtonStyle}" Click="CategoryButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
