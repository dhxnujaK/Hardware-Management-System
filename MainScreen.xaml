<Window x:Class="Hardware_Management_System.MainScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Main Screen" Height="450" Width="800" ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Button Style for hover effects -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6200EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#6200EE"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

            <Style.Triggers>
                <!-- Hover effect: Change background color when hovered -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6A00"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="499*"/>
            <ColumnDefinition Width="147*"/>
        </Grid.ColumnDefinitions>
        <Rectangle HorizontalAlignment="Left" Height="436" Stroke="Black" VerticalAlignment="Center" Width="245" Fill="#FF000B51" Grid.ColumnSpan="3"/>
        <Button Content="Cement" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="44" Width="245" Margin="0,10,0,0" FontSize="14" FontWeight="Bold"/>
        <Button Content="Electrical Appliances" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="44" Width="245" Margin="0,206,0,0" FontSize="14" FontWeight="Bold"/>
        <Button Content="Home Appliances" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="44" Width="245" Margin="0,157,0,0" FontSize="14" FontWeight="Bold"/>
        <Button Content="Steel Rods" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="44" Width="245" Margin="0,108,0,0" FontSize="14" FontWeight="Bold"/>
        <Button Content="Paint" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="44" Width="245" Margin="0,59,0,0" FontSize="14" FontWeight="Bold"/>
        <Label Grid.Column="2" Content="Welcome to the Hardware Management System" HorizontalAlignment="Left" Height="35" Margin="167,32,0,0" VerticalAlignment="Top" Width="430" Background="#00000000" Foreground="#FFB50D0D" FontFamily="Arial Black" FontSize="16" Grid.ColumnSpan="2"/>
        <!-- Header (TextBlock) -->

    </Grid>
</Window>
